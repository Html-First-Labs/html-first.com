<script>
  showingModal = false
</script>

<div id="right-sidebar" class="hidden bg-gray-700 bg-opacity-50 fixed top-0 bottom-0 right-0 left-0 flex justify-center items-center z-20" >
  <div id="right-sidebar-inner" class="shadow bg-white fixed right-0 bottom-0 top-0 flex z-20" style="width:500px">
    <div style="left:-40px" class="cursor-pointer absolute" _= "on click add .hidden to #right-sidebar">
      <%= inline_svg_tag("heroicons/icon-x.svg",class:"w-10 h-10 text-white") %>
    </div>
    <div id="right-sidebar-content">
    </div>
  </div>
</div>

<div class="ui-toasts" :each="toast, index in toasts" >
  <div class="--toast" role="alert"
    :class="el.toastClass"
    :scope
    :load="
      initialdelay = index * 500
      await wait(initialdelay);
      el.toastClass='--animate-in';
      if (toast.disappearing) {
        await wait(2000);
        el.toastClass='--animate-out'
      }
  ">
    <div class="--wrapper" >
      <div class="--content">
        <div class="--dismiss" :click="scope.toastClass='--animate-out';await wait(1000);scope.toastClass='hidden'" >
          <%= inline_svg_tag("heroicons/x-mark.svg") %>
        </div>
        <span class="--title" :text="toast.title">
        </span> 
        <span class="--message" :text="toast.message">
        </span> 
      </div>
    </div>
  </div>
</div>